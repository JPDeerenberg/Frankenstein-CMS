name = "frankenstein-bouncer"
main = "worker.js"
compatibility_date = "2023-01-01"

# --- Multi-tenant Setup (KV) ---
# To support multiple clients in one worker, create a KV namespace:
# npx wrangler kv:namespace create CONFIG_KV
#
# Then add the ID returned to the [[kv_namespaces]] block below.
#
# To add a client:
# npx wrangler kv:key put --binding=CONFIG_KV "client@email.com" '{"password":"site-password", "github_token":"ghp_abc123"}'

# [[kv_namespaces]]
# binding = "CONFIG_KV"
# id = "YOUR_KV_NAMESPACE_ID"

# --- Single-tenant Setup (Secrets) ---
# For a single site, you can just use environment variables:
# npx wrangler secret put CLIENT_EMAIL
# npx wrangler secret put CLIENT_PASSWORD
# npx wrangler secret put GITHUB_TOKEN

[vars]
# CLIENT_EMAIL = "optional-default@email.com"
